<section>
    <div class="row mt-3">
        <div class="col">
            <div class="card mb-5 mb-lg-0">
                <div class="card-header">
                    <div class="row">
                        <div class="col-8">
                            <h2 class="h6 mb-0 text-uppercase">Category: {{cats.title}}</h2>
                        </div>
                        <div class="col-2">
                            <form id="searchForm" class="ml-auto d-none d-lg-block">
                                <div class="form-group position-relative mb-0">
                                    <button type="submit" style="top: -3px; left: 0;"
                                        class="position-absolute bg-white border-0 p-0"><i
                                            class="o-search-magnify-1 text-gray text-lg"></i></button>
                                    <input type="search" placeholder="Search ..."
                                        class="form-control form-control-sm border-0 no-shadow pl-4">
                                </div>
                            </form>
                        </div>
                        <div class="col-2">
                            <button id="add-category-btn" class="btn btn-outline-primary pull-right"><i
                                    class="fas fa-plus"></i>ADD NEW</button>
                        </div>
                    </div>

                </div>
                <div class="card-body" id="list-cat">
                    <div class="card">
                        <div class="card-body">
                            <div class="form-group">
                                <label class="form-control-label text-uppercase">Sub Category Title</label>
                                <input type="text" id="catTitle" placeholder="Sub Category Title" class="form-control">
                            </div>
                            <div class="form-group">
                                <label class="form-control-label text-uppercase">Sub Category Description</label>
                                <input type="text" id="catDesc" placeholder="Sub Category Description"
                                    class="form-control">
                            </div>
                            <input type="text" id="catId" class="form-control" style="display:none">
                            <div class="form-group text-center">
                                <button type="button" class="btn btn-primary" id="save-category">SAVE NEW SUB
                                    CATEGORY</button>
                            </div>
                            <input type="hidden" name="_csrf" id="csrfValue" value="{{csrfToken}}">
                            <input type="text" id="categoryId" style="display:none" value="{{cats._id}}">
                        </div>
                    </div>
                </div>

                <div class="card-body" id="add-list-cat">

                    {{#each cats.subCats}}
                    <div
                        class="d-flex justify-content-between align-items-start align-items-sm-center mb-4 flex-column flex-sm-row">
                        <div class="left d-flex align-items-center">
                            <div class="icon icon-lg shadow mr-3 text-gray"><i class="fas fa-shopping-basket"></i></div>
                            <div class="text">
                                <h6 class="mb-0 d-flex align-items-center"> <span>

                                        {{this.title}}

                                    </span><span class="dot dot-sm ml-2 bg-blue"></span></h6><small class="text-gray">
                                    {{this.description}}
                                </small>
                            </div>
                        </div>
                        <div class="right ml-5 ml-sm-0 pl-3 pl-sm-0 text-blue">
                            <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                                <button type="button" class="btn btn-outline-primary" data-id={{this._id}}
                                    onclick="getdata(this)"><i class="fas fa-edit"></i> Edit</button>
                                <button id="delete-category-btn" class="btn btn-outline-primary"
                                    data-id="{{this._id}}"><i class="fas fa-trash-alt"></i> Delete</button>
                            </div>
                        </div>
                    </div>
                    <div
                        class="d-flex justify-content-between align-items-start align-items-sm-center mb-4 flex-column flex-sm-row">
                        <button class="btn btn-outline-primary pull-right"><i class="fas fa-shopping-cart"></i>ITEMS</button>
                    </div>
                    {{/each}}
                </div>

            </div>
        </div>
    </div>
    </div>
    </div>
</section>